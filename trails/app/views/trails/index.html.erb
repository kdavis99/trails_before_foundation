<p id="notice"><%= notice %></p>


<h1>Listing Trails</h1>

<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Startlng</th>
      <th>Startlat</th>
      <th>Endlng</th>
      <th>Endlat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trails.each do |trail| %>
      <tr>
			<% @trail = trail %>
        <td><%= trail.Name %></td>
        <td><%= trail.StartLng %></td>
        <td><%= trail.StartLat %></td>
        <td><%= trail.EndLng %></td>
        <td><%= trail.EndLat %></td>
		  <% #render 'show', trail: @trail %>
		  <% #link_to 'Show', request.original_url %>
		  <td><%= link_to trail.Name, trail, :remote => true, data: { no_turbolink: true } %></td>
		  <div id="contenthere"></div>
		  <td><%= link_to 'Show', trail%></td>
        <td><%= link_to 'Edit', edit_trail_path(trail) %></td>
        <td><%= link_to 'Destroy', trail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trail', new_trail_path %>
